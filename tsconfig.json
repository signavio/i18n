{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "index.d.ts"
  ]
}

{
  "name": "@signavio/i18n",
  "version": "4.0.1",
  "description": "Minimalist gettext style i18n for JavaScript",
  "lib": "dist/lib/index.js",
  "module": "dist/esm/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/signavio/i18n.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bin": {
    "i18n-extract": "bin/i18n-extract.js",
    "i18n-merge": "bin/i18n-merge.js"
  },
  "scripts": {
    "prebuild": "yarn run clean",
    "clean": "rimraf lib modules",
    "build": "yarn run build:lib && yarn build:module",
    "build:lib": "cross-env NODE_ENV=production tsc --project tsconfig.json",
    "build:module": "cross-env NODE_ENV=production tsc --project tsconfig.module.json",
    "coverage": "yarn test --runInBand --reporters=jest-junit",
    "dryrun": "node ./bin/i18n-extract.js test/fixtures/**/*.js",
    "format": "prettier --write --no-semi --single-quote --trailing-comma es5 \"{src,test}/**/*.js\"",
    "lint": "eslint src/ test/specs/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "pretest": "yarn build",
    "prepublishOnly": "yarn build",
    "predryrun": "yarn build"
  },
  "author": "Jan-Felix Schwarz",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/signavio/i18n/issues"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "gettext-parser": "2.0.0",
    "glob": "^6.0.1",
    "marked": "^4.0.10",
    "progress": "^2.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.0",
    "@types/marked": "^4.0.1",
    "@types/progress": "^2.0.5",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-eslint": "9.x",
    "commander": "6.2.1",
    "cross-env": "4.0.0",
    "eslint": "5.16.0",
    "eslint-config-react-app": "3.0.8",
    "eslint-plugin-flowtype": "2.50.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "gettext-to-messageformat": "0.3.1",
    "jest": "27.0.6",
    "jest-junit": "12.2.0",
    "jsdom": "9.12.0",
    "po2json": "1.0.0-beta-3",
    "prettier": "1.15.3",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "rimraf": "2.7.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "@babel/core": "^7.0.0",
    "react": "^16.13.0"
  }
}
